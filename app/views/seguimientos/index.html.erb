<p id="notice"><%= notice %></p>

<h1>Seguimientos</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Actividad</th>
      <th>Descripcion</th>
      <th>Porcentaje</th>
      <th>Cierre</th>
      <th>Anexo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @seguimientos.each do |seguimiento| %>
      <tr>
        <td><%= seguimiento.user_id %></td>
        <td><%= seguimiento.actividad_id %></td>
        <td><%= seguimiento.descripcion %></td>
        <td><%= seguimiento.porcentaje %></td>
        <td><%= seguimiento.cierre %></td>
        <td><%= seguimiento.anexo %></td>
        <td><%= link_to 'Show', seguimiento %></td>
        <td><%= link_to 'Edit', edit_seguimiento_path(seguimiento) %></td>
        <td><%= link_to 'Destroy', seguimiento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

