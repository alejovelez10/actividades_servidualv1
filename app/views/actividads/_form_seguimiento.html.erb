<div id="contact-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title">Crear Seguimiento</h4>
      </div>
<%= form_tag create_seguimiento_path, :multipart => true do %>
  <div class="alert alert-danger" style="display:none;padding: 10px;">
    <ul>
    
    </ul>
  </div>
      <div class="modal-body">
<div class="row">
  <div class="col-md-12">
     <div class="form-group">
    <%= label_tag "Descripcion" %>
    <%= text_area_tag :descripcion, nil , class: "form-control formus" %>
  </div>
   <div class="form-group">
    <%= label_tag "Anexo" %>
    <%= file_field_tag :anexo ,  class: "form-control formus" %>
  </div>
  <div class="form-group">
    <%= label_tag "Porcentaje de Avance" %>
    <%= number_field_tag :porcentaje, nil , class: "form-control formus" %>
  </div>
    <%if current_user.id == @actividad.user_id%>
       <div class="form-group">
                  <label class="label-check" style = "margin-right:10px;display:inline-block">Cerrar</label>
                  <%= check_box_tag :cierre ,nil,nil, class: "check-box" %>
      </div>
<%end%>

  </div>
</div>

        



<%= hidden_field_tag :user_id ,current_user.id %>

<%= hidden_field_tag :actividad_id ,@actividad.id %>


 
<br>

      <div class="modal-footer text-center">
       
        <%= submit_tag "Guardar", class: 'btn btn-primary btnpad' %>
         <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
      </div>
<% end %>

    </div>
  </div>
</div>
</div>

