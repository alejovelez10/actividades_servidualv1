<%= link_to 'Back', actividads_path %>

      <div class="row actividad">

   <div class="row">
        
         
  <div class="col-md-3">
    <p><strong>Consecutivo:</strong> <%= @actividad.codigo %></p>
  </div>
   <div class="col-md-3">
    <p><strong>Consecutivo:</strong> <%= get_date(@actividad.created_at) %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Prioridad: </strong><%= @actividad.prioridad %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Tipo:</strong> <%= @actividad.tipo %></p>
  </div>
  </div>
  <hr class="hr">

 <div class="row">
    <div class="col-md-3">
    <p><strong>Estado:</strong> <%= get_estado(@actividad.estado_cierre)%></p>
  </div>
  <div class="col-md-3">
    <p><strong>¿Enviada?:</strong> <%= @actividad.estado_envio%> </p>
  </div>
    <div class="col-md-3">
    <p><strong>Avance:</strong> <%= @actividad.porcentaje%> %</p>
      </div>
 
  <div class="col-md-3">
    <p><strong>Responsable:</strong> <%= @actividad.responsable.nombres %> </p>
  </div>

    </div>

  <hr class="hr">

     <div class="row">
      <div class="col-md-3">
    <p><strong>Anexo:</strong> <%= link_to "Anexo", @actividad.anexo_url %> </p>
  </div>
  <div class="col-md-3">
    <p><strong>Fecha de Entrega:</strong> <%= get_date(@actividad.f_entrega) %></p>
  </div>


 
    <div class="col-md-6">
    <strong>Otros responsables:</strong> <%  @actividad.users.each do |user| %>
    <%= user.nombres%> <%= user.apellidos%>,
    <%end%>
  </div>
   </div>

  <hr class="hr">

 <div class="row">

    <div class="col-md-4">
    <p><strong>Actividad: </strong><%= @actividad.nombre%> </p>
  </div>
<div class="col-md-8">
    <strong>Descripción:</strong> <%==   @actividad.descripcion %> 
  </div>
 </div>

    
  
</div>








<h3 class="text-center">Seguimientos (<%=@actividad.seguimientos.count%>) <%= link_to 'Nuevo', new_seguimiento_path(@actividad), remote:true, class:"btn btn-primary" %> 
 </h3>


<% @actividad.seguimientos.each do |seg|%>
<div class="row actividad">
  <div class="col-md-3">
    <p><strong>Fecha:</strong> <%= get_date(seg.created_at) %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Responsable:</strong> <%= seg.user.nombres %> <%= seg.user.apellidos %></p>
  </div>
  <div class="col-md-3">
    <p><strong>% de Avance: </strong><%= seg.porcentaje %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Anexo:</strong> <%= (link_to "Adjunto", seg.anexo_url) if seg.anexo_url %></p>
  </div>
 
  <div class="col-md-12">
    <p><strong>Descripción:</strong> <%= seg.descripcion %></p>
  </div>

    </div>

    <%end%>