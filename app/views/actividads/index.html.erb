
<div class="row">
  <div class="col-md-8">
<h2 class= "color-blue">Actividades (<%=@actividads.count%>)</h2>    
  </div>
  <div class="col-md-4 text-right">
    <%= link_to 'Nueva Actividad', new_actividad_path, class:"btn btn-primary" %>
  </div>
</div>



    <% @actividads.each do |actividad| %>
  <p class = "p"><%= link_to 'Ver', actividad %> |
    <%= link_to 'Editar', edit_actividad_path(actividad) %> |
    <%= link_to 'Eliminar', actividad, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <div class="row actividad">
   <div class="row">
        
         
  <div class="col-md-3">
    <p><strong>Codigo:</strong> <%= actividad.codigo %></p>
  </div>
  <div class="col-md-3">
    <p><strong>F Creacion:</strong> <%= get_date(actividad.created_at)%></p>
  </div>
  <div class="col-md-3">
    <p><strong>Prioridad: </strong><%= actividad.prioridad %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Tipo:</strong> <%= actividad.tipo %></p>
  </div>
    

 
  </div>
  <hr class="hr">
  <div class="row">
  <div class="col-md-3">
    <p><strong>Estado:</strong> <%= get_estado(actividad.estado_cierre)%> <%= "," + actividad.e_vencimiento.to_s%></p>
  </div>
    <div class="col-md-3">
    <p><strong>Â¿Enviada?:</strong> <%= get_envio(actividad.estado_envio)%> </p>
  </div>
    <div class="col-md-3">
    <p><strong>Avance:</strong> <%= actividad.porcentaje%> %</p>
  </div>

 
  <div class="col-md-3">
    <p><strong>Responsable:</strong> <%= actividad.responsable.nombres %> </p>
  </div>
 
   </div>
<hr class="hr">
  <div class="row">
 <div class="col-md-6">
    <p><strong>Actividad: </strong><%= actividad.nombre%> </p>
  </div>
   <div class="col-md-3">
    <p><strong>F Entrega:</strong> <%= get_date(actividad.f_entrega) %></p>
  </div>
  <div class="col-md-3">
    <p><strong>Anexo:</strong> <%= link_to "Anexo", actividad.anexo_url %> </p>
  </div>
  </div>
</div>
<br>
    <% end %>
 





